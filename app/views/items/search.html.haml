      = link_to "#" do
        %img.inner__icons__apple{ src: "/material/icon/Download_on_the_App_Store_Badge_US-UK_RGB_blk_092917.svg"}
      = link_to "#" do
        %img.inner__icons__google{ src: "/material/icon/google-play-badge copy.png" }
