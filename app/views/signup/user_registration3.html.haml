.userContainer
  .container
    .userContainerHeader
      %h1.userContainerHeader__left
        = link_to root_path, class: "upperHomeLink" do
          = image_tag("/material/logo/logo.png",class: "logo")
    %nav.userSignupBar
      %ol.userSignupBarProgress2
        %li.userSignupBarProgress2__type
          会員情報
          .userSignupBarProgress2__rod-red-first
        %li.userSignupBarProgress2__type
          電話番号登録
          .userSignupBarProgress2__rod-red-second
        %li.userSignupBarProgress2__type-red
          お届け先住所入力
          .userSignupBarProgress2__rod-red
        %li.userSignupBarProgress2__type
          支払い方法
          .userSignupBarProgress2__rod
        %li.userSignupBarProgress2__type
          完了
          .userSignupBarProgress2__rod-last
  .signUpBoxHeader
    .signUpBox
      %h2.signUpBox__title
        お届け先住所入力
      = form_with  class: "deliveryAddressForm", local: true do |f|
        .deliveryAddressBox
          .deliveryForm
            %label.deliveryForm__label
              お名前
            %span.deliveryForm__condition
              必須
            = f.text_field :family_name, placeholder: '例）山田', class: "deliveryForm__form"
            = f.text_field :first_name, placeholder: '例）彩', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              お名前カナ
            %span.deliveryForm__condition
              必須
            = f.text_field :family_name_kana, placeholder: '例）ヤマダ', class: "deliveryForm__form"
            = f.text_field :first_name_kana, placeholder: '例）アヤ', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              郵便番号
            %span.deliveryForm__condition
              必須
            = f.text_field :post_code, placeholder: '例) 123-4567', class: "deliveryForm__form"
          -# ここは、gem jp_prefectureを使用して、prefecture.allなどでid とnameを出す予定
          .deliveryForm__bellow
            %label.deliveryForm__label
              都道府県
            %span.deliveryForm__condition
              必須
            .prefectureWrap
              = f.text_field :prefecture, placeholder: '北海道', class: "prefectureBox"
              = icon('fas', 'chevron-down', class: 'prefectureBoxIcon')
          .deliveryForm__bellow
            %label.deliveryForm__label
              市区町村
            %span.deliveryForm__condition
              必須
            = f.text_field :city, placeholder: '例) 横浜市緑区', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              番地
            %span.deliveryForm__condition
              必須
            = f.text_field :house_number, placeholder: '例) 青山1-1-1', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              建物名
            %span.deliveryForm__optional
              任意
            = f.text_field :building_name, placeholder: '例) 柳ビル103', class: "deliveryForm__form"
            = f.submit '次へ進む', class: "addressBtn"
  .exbitFooter
    .exbitFooter__content
      = link_to "プライバシーポリシー", "", class: "policy"
      = link_to "フリマ利用規約", "", class:  "policy"
      = link_to "特定商取引先に関する表記", "", class:  "policy"
    = link_to root_path, class: "homelink" do
      = image_tag("/material/logo/logo-white.png",class: "footerLogo")
    %p
      %samll © 2020 Fmarket
