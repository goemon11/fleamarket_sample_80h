          = link_to "#", class: "listBox" do
            %li.listBox__content
              %p.listBox__content__title
                メールアドレス
              = icon('fas', 'angle-right', class: "listBox__content__icon")
          = link_to "#", class: "listBox" do
            %li.listBox__content
              %p.listBox__content__title
                本人情報
              = icon('fas', 'angle-right', class: "listBox__content__icon")
          = link_to "#", class: "listBox" do
            %li.listBox__content
              %p.listBox__content__title
                ログアウト
              = icon('fas', 'angle-right', class: "listBox__content__icon")
    .myPageGap
    .myPageContent
      .myPageWrapper
        %section.myPageWrapper__myPageUserIcon
          = link_to "#"  do
            %figure
            - if current_user.image?
              = image_tag current_user.image.url, class: 'content__myPageUserIcon__photo', height: '60', width: '60'
            - else
              = image_tag asset_path('profile.default1.png'), class: "content__myPageUserIcon__photo", heght: "60", width: "60"
            %h2.myPageWrapper__myPageUserIcon__userName
              = current_user.nick_name
            .myPageWrapper__myPageUserIcon__count
              .myPageContent__myPageUserIcon__count__item
                評価
                %span.myPageWrapper__myPageUserIcon__count__item__number
                  0
              .myPageWrapper__myPageUserIcon__count__item
                出品数
                %span.myPageWrapper__myPageUserIcon__count__item__number
                  0
        %section.myPageWrapper__myPageTabContainer
          %ul.myPageTabs
            %li.myPageTabsActive
              = link_to "出品中", "#", class: "myPageTabsTitle"
            %li.myPageTabsPassive
              = link_to "取引中", "#", class: "myPageTabsTitle"
            %li.myPageTabsPassive
              = link_to "購入した商品", "#", class: "myPageTabsTitle"
            %li.myPageTabsPassive
              = link_to "出品する", "#", class: "myPageTabsTitle"
          .myPageLists
            - @user_items.each do |item|
              = link_to item_path(item.id), class: "myPageList" do
                =image_tag item.item_images.first.image.url, class: "myPageListsBox__top__image", heght: "90", width: "90"
                .myPageList__body
                  .myPageList__body__contentsName
                    = item.name
                  .myPageList__body__price
                    = "¥#{item.price}"
                =icon("fas", "chevron-right", class: "right-icon")
            .myPageLists__goMyPage
