.userContainer
  .container
    .userContainerHeader
      %h1.userContainerHeader__left
        = link_to root_path, class: "upperHomeLink" do
          = image_tag("/material/logo/logo.png",class: "logo")
    %nav.userSignupBar
      %ol.userSignupBarProgress2
        %li.userSignupBarProgress2__type
          会員情報
          .userSignupBarProgress2__rod-red-first
        %li.userSignupBarProgress2__type
          電話番号登録
          .userSignupBarProgress2__rod-red-second
        %li.userSignupBarProgress2__type
          お届け先住所入力
          .userSignupBarProgress2__rod-red-second
        %li.userSignupBarProgress2__type-red
          支払い方法
          .userSignupBarProgress2__rod-red
        %li.userSignupBarProgress2__type
          完了
          .userSignupBarProgress2__rod-last
  .signUpCreditCard
    .signUpCreditCardBox
      %h2.signUpCreditCardBox__title
        クレジットカード情報入力
      = form_with html: { class: "creditCardForm"}, local: true do |f|
        .signUpCreditCardBlock
          .inputCreditCardBlock
            %label.confirmationCcTitle
              カード番号
            %span.confirmationCcTitle__condition
              必須
            = f.text_field :card_number,name: "card_number", placeholder: "半角数字のみ", class: "confirmationCcTitleForm",maxlength: "16"
            %label.confirmationCcTitle
              有効期限
            %span.confirmationCcTitle__condition
              必須
            .inputCreditCardBlock__date
              != sprintf(f.date_select(:expiration_date,with_css_classes:'creditCard--date', order:[:month,:year,:day], use_month_numbers:true, discard_day:true, start_year:Time.now.year-2000, end_year:Time.now.year-2000+10, date_separator:'%s'),'月') + '年'
            %label.confirmationCcTitle
              セキュリティコード
            %span.confirmationCcTitle__condition
              必須
            = f.text_field :card_number,name: "card_number", placeholder: "カード背面4桁もしくは3桁の数字", class: "confirmationCcTitleForm",maxlength: "16"
            = f.submit "登録する", class: "creditCardBtn"
  .exbitFooter
    .exbitFooter__content
      = link_to "プライバシーポリシー", "", class: "policy"
      = link_to "フリマ利用規約", "", class:  "policy"
      = link_to "特定商取引先に関する表記", "", class:  "policy"
    = link_to root_path, class: "homelink" do
      = image_tag("/material/logo/logo-white.png",class: "footerLogo")
    %p
      %samll © 2020 Fmarket