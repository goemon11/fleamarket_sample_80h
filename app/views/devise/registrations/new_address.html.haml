.container
  .userContainerHeader
    %h1.userContainerHeader__left
      = link_to root_path, class: "upperHomeLink" do
        = image_tag("/material/logo/logo.png",class: "logo")
  %nav.userSignupBar
    %ol.userSignupBarProgress2
      %li.userSignupBarProgress2__type
        会員情報
        .userSignupBarProgress2__rod-red-first
      %li.userSignupBarProgress2__type
        電話番号登録
        .userSignupBarProgress2__rod-red-second
      %li.userSignupBarProgress2__type-red
        お届け先住所入力
        .userSignupBarProgress2__rod-red
      %li.userSignupBarProgress2__type
        支払い方法
        .userSignupBarProgress2__rod
      %li.userSignupBarProgress2__type
        完了
        .userSignupBarProgress2__rod-last
      = form_with  model: @address,url: users_sign_up_address_path, class: "deliveryAddressForm", local: true do |f|
        - if @address.errors.any?
          .SettingRegistrationErrors
            %h2= "#{@address.errors.full_messages.count}件のエラーが発生しました。"
            %ul
              - @address.errors.full_messages.each do |message|
                %li= message
.signUpAddressBar
  .signUpBoxAddress
    %h2.signUpBoxAddress__title
      お届け先住所入力
    .formAddress
      = form_with  class: "deliveryAddressForm", local: true do |f|
        .deliveryAddressBox
          .deliveryForm
            %label.deliveryForm__label
              お名前
            %span.deliveryForm__condition
              必須
            = f.text_field :delivery_family_name, placeholder: '例）山田', class: "deliveryForm__form"
            = f.text_field :delivery_first_name, placeholder: '例）彩', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              お名前カナ
            %span.deliveryForm__condition
              必須
            = f.text_field :delivery_family_name_kana, placeholder: '例）ヤマダ', class: "deliveryForm__form"
            = f.text_field :delivery_first_name_kana, placeholder: '例）アヤ', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              郵便番号
            %span.deliveryForm__condition
              必須
            = f.text_field :post_code, placeholder: '例) 123-4567', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              都道府県
            %span.deliveryForm__condition
              必須
            .prefectureWrap
              = f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name,{}, {class: "prefectureBox"}
          .deliveryForm__bellow
            %label.deliveryForm__label
              市区町村
            %span.deliveryForm__condition
              必須
            = f.text_field :city, placeholder: '例) 横浜市緑区', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              番地
            %span.deliveryForm__condition
              必須
            = f.text_field :house_number, placeholder: '例) 青山1-1-1', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              建物名
            %span.deliveryForm__optional
              任意
            = f.text_field :building_name, placeholder: '例) 柳ビル103', class: "deliveryForm__form"
          .deliveryForm__bellow
            %label.deliveryForm__label
              電話（お届け先）
            %span.deliveryForm__optional
              任意
            = f.text_field :delivery_phone_number, placeholder: '例)09012345678', class: "deliveryForm__form"
            = f.submit '次へ進む', class: "addressBtn"
