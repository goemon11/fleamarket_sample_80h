%header
  .innerHeader
    .innerHeader__upperHeader
      .image
        = link_to image_tag("/material/logo/logo.png", class: "image__logo"), "#"
      .searchBox
        %input.searchBox--input{:name => "key", :placeholder => "キーワードから探す"}/
        %button
          .searchBox__search__icon
          = link_to image_tag("/material/icon/icon-search1.png", class: "searchBox__search__icon__logo"), "#"
    %nav.innerHeader__lowerHeader
      %ol.leftList
        %li.leftList__category
          = link_to "カテゴリー","#", class: "link"
        %li.leftList__brand
          = link_to "ブランド","#",class: "link"
      %ol.rightList
        %li.rightList__login
          = link_to "ログイン","#", class: "link"
        %li.rightList__memberRegistration
          = link_to "新規会員登録", signup_index_path, class: "link"
